a <- c(1,4,7, NA, 10)

remove_missing <- function(a) {
  result <- c()
  for (i in 1:length(a)) {
    if (!is.na(a[i])) {
      result <- c(result, a[i])
    }
  }
  return(result);
}
remove_missing(a)
