```{r}
a <- c(1,4,7,NA,10)
get_avg <- function(a, na.rm) {
  summation <- 0
  len <- 0
  for (i in 1:length(a)) {
    if (na.rm && is.na(a[i])) {
      next
    } 
    summation <- summation + a[i]
    len <- len + 1
  }
  return(summation / len)
}
get_avg(a, na.rm = TRUE)
